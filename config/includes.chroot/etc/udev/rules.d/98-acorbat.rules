#https://github.com/jukil/aclidswitch/blob/master/98-aclidswitch.rules
# Settings on battery
SUBSYSTEM=="power_supply", ENV{POWER_SUPPLY_ONLINE}=="0", ENV{DISPLAY}=":0", ENV{XAUTHORITY}="/home/$USER/.Xauthority", RUN+="/etc/romix/power.sh battery"

# Settings on AC
SUBSYSTEM=="power_supply", ENV{POWER_SUPPLY_ONLINE}=="1", ENV{DISPLAY}=":0", ENV{XAUTHORITY}="/home/$USER/.Xauthority", RUN+="/etc/romix/power.sh ac"


