background yes
use_xft yes
xftfont DejaVu Sans Mono:size=7.5
xftalpha 0.5

own_window yes
own_window_type desktop
own_window_transparent yes
own_window_hints undecorated,sticky

double_buffer yes

minimum_size 150 5
maximum_width 320

draw_shades no
draw_borders no
draw_graph_borders no
draw_outline no

default_color black
default_shade_color red
default_outline_color green
alignment top_right


gap_x 2
gap_y 2
update_interval 4.0
total_run_times 0

border_width 1
stippled_borders 0
uppercase no
extra_newline no
use_spacer none
show_graph_scale no
show_graph_range no

cpu_avg_samples 2
net_avg_samples 2
out_to_console no
out_to_stderr no
no_buffers yes

TEXT
${color grey}MHz:$color $freq
${color grey}Batt:$color $battery
${color grey}RAM:$color $mem/$memmax
${color grey}Swap:$color $swap/$swapmax
${color grey}CPU:$color $cpu%
${color grey}IO:$color $diskio
${color grey}Net Up:$color ${upspeed wlan0}
${color grey}Net Down:$color ${downspeed wlan0}
$hr
${color grey}Top CPU Name              CPU%
${color lightgrey} ${top name 1} ${top cpu 1}
${color lightgrey} ${top name 2} ${top cpu 2}
${color lightgrey} ${top name 3} ${top cpu 3}
${color lightgrey} ${top name 4} ${top cpu 4}
${color lightgrey} ${top name 5} ${top cpu 5}
$hr
${color grey}Top MEM Name              MEM%
${color lightgrey} ${top_mem name 1} ${top_mem mem_res 1}
${color lightgrey} ${top_mem name 2} ${top_mem mem_res 2}
${color lightgrey} ${top_mem name 3} ${top_mem mem_res 3}
${color lightgrey} ${top_mem name 4} ${top_mem mem_res 4}
${color lightgrey} ${top_mem name 5} ${top_mem mem_res 5}

